--- 
import '../assets/style/style.scss';
import '../assets/js/common.js';
import Topmenu from '../components/Topmenu.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">

		<link rel="shortcut icon" href="images/fav.png" type="image/x-icon">
		<link rel="apple-touch-icon" href="images/fav.png">
		<link rel="apple-touch-icon" sizes="76x76" href="images/fav.png">
		<link rel="apple-touch-icon" sizes="120x120" href="images/fav.png">
		<link rel="apple-touch-icon" sizes="152x152" href="images/fav.png">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>{title}</title>
	</head>
	<body>
		<Topmenu />

		<slot />

		<Footer />
	</body>

	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js"></script>
	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js"></script>
	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js"></script>
	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/ScrollToPlugin.min.js"></script>
	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/ScrollTrigger.min.js"></script>
	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flickity/2.2.1/flickity.pkgd.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flickity/2.2.1/flickity.min.css">
	<link rel="stylesheet" href="https://unpkg.com/flickity-fade@1/flickity-fade.css">
	<script is:inline src="https://unpkg.com/flickity-fade@1/flickity-fade.js"></script>
	<script is:inline src="https://unpkg.com/flickity-sync@2.0.0/flickity-sync.js"></script>
	<script is:inline src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
	
</html>

<style lang="scss">
	
</style>