---
import Layout from '../layouts/Layout.astro';

const response = await fetch('https://jsonplaceholder.typicode.com/users?_limit=10');
const myData = await response.json();

// const URL = import.meta.env.URL;
---

<Layout title="About">
    <div class="aboutWrap">
        <ul class="userList grid grid-cols-4 gap-y-20 gap-x-40">
            {myData.map(data => (
                <li class="text-white text-center hover:opacity-50 transition-all duration-500 py-10">
                    <h1 class="name">{data.username}</h1>
                    <div class="email">{data.email}</div>
                </li>
            ))}
        </ul>
    </div>
</Layout>

<style lang="scss">
    .aboutWrap{
        background-color: #000;
        padding: 50px 0;
    }
    .userList{
        max-width: 1600px;
        margin: 0 auto;
        li{
        }
    }
</style>
