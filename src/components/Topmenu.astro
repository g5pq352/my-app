---
const TopmenuData = [{
    name: 'index',
    title: '首頁',
    link: '',
}, {
    name: 'about',
    title: '關於我們',
    link: 'about',
}]

---
<div id="preload" style="z-index: 109; position: fixed; top: 0; right: 0; bottom: 0; left: 0; background-color: #fff;"></div>

<div class="topmenuWrap">
    <div class="topmenu">
        {TopmenuData.map(menuData => (
            <a href={`../`+menuData.link} title={menuData.title}>{menuData.name}</a>
        ))}
        
    </div>
</div>

<style lang="scss">
    .topmenuWrap{
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 50px;
        .topmenu{
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            a{
                text-align: center;
            }
        }
    }
</style>
